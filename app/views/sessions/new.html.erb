<div class="login-container">
  <div class="login-box">
    <h1 class="login-title">ログイン</h1>
    <%= form_with(url: login_path, method: :post, class: "login-form") do |f| %>
      <div class="form-group">
        <%= f.label :login_id, "ログインID", class: "form-label" %>
        <%= f.text_field :login_id, class: "form-input", placeholder: "ログインIDを入力" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", class: "form-label" %>
        <%= f.password_field :password, class: "form-input", placeholder: "パスワードを入力" %>
      </div>

      <div class="form-actions">
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
